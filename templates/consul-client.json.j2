{
  "data_dir": "{{ consul.data_dir }}",
  "datacenter": "{{ consul.datacenter }}",
  "enable_syslog": true,
  "encrypt": "{{ consul.encrypt_key }}",
  "log_level": "{{  consul.log_level }}",
