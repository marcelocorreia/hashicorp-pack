description "Nomad agent"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid root
setgid root

# This is to avoid Upstart re-spawning the process upon `vault leave`
normal exit 0 INT

# stop vault will not mark node as failed but left
kill signal INT

script
  if [ -f "/etc/service/vault" ]; then
    . /etc/service/vault
  fi

  # Make sure to use all our CPUs, because Nomad can block a scheduler thread
  export GOMAXPROCS=`nproc`

  # Get the public IP
  BIND=`ifconfig {{ vault.iface }} | grep "inet addr" | awk '{ print substr($2,6) }'`

  exec /usr/local/bin/vault agent \
    -config="/etc/vault.d/config.hcl" \
    -bind=$BIND \
    ${NOMAD_FLAGS} \
    >>/var/log/vault.log 2>&1
end script
