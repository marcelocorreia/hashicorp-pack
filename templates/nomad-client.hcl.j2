# Increase log verbosity
log_level = "DEBUG"
datacenter = "{{ nomad.datacenter | default('dc-1') }}"
data_dir = "{{ nomad.datadir | default('/var/nomad/data') }}"
bind_addr = "{{ inventory_hostname }}"
name = "{{ inventory_hostname }}"

client {
  enabled = true
  consul {
    token = "{{ consul_encrypt_key }}"
  }
  servers = [{% for host in groups['nomad-servers'] %}"{{ hostvars[host]['inventory_hostname']}}"{% if not loop.last %},{% endif %}{% endfor %}]

}
